extends ../layout

block content
  h1 Signup
    
  form(action="/register", method="post")
        .form-group 
            label(for="name") Full Name 
            input#title(type="text", class="form-control" name = "name" required)
        .form-group 
            label(for="email") Email 
            input#title(type="text", class="form-control" name = "email" required)
        .form-group 
            label(for="password") Password 
            input#price(type="password", class ="form-control" name ="password" minlength ="8" required)
            br
        input(type="submit", class="btn btn-info" value="Register")