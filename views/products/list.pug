extends ../layout

block content 
    .row
        .col-sm-8 
            h1=title
        .col.sm-4
            a(href="products/add",class = "btn btn-success float-right") Add Product
    table.table     
        thead 
            tr 
                th Name
                th Price
                th Actions
            tbody 
                each product in products
                    tr 
                        td=product.title       
                          
                        td=product.price
                           
                        td
                          a(href="products/delete/"+product._id,class = "btn btn-danger ") Delete
                          a(href="products/edit/"+product._id,class = "btn btn-primary") Edit
                          a(href="products/cart/"+product._id,class = "btn btn-warning") Add to cart